<?xml version="1.0" encoding="UTF-8"?>
<module xmlns="urn:jboss:module:1.1" name="com.example.workItem">
    <resources>
        <!-- add any jar libraries with custom workItemHandlers here -->
        <resource-root path="${organization.name}-${ant.project.name}.jar" />
    </resources>

    <dependencies>
        <!-- add here any dependencies that your custom workItemHandlers may have -->
        <module name="org.drools" slot="${droolsjbpm.slot}" />
        <module name="org.apache.log4j" />
        <module name="org.codehaus.jackson.jackson-mapper-asl" export="true" />
        <module name="org.codehaus.jackson.jackson-core-asl" export="true" />
        <module name="org.apache.commons.io" export="true" />
    </dependencies>
</module>
